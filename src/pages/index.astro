---
import { getSession } from 'auth-astro/server';

import Shop from "../components/register/Shop.astro";
import Intro from  "../components/register/Intro.astro";
import Layout from "../layouts/Layout.astro";

const session = await getSession(Astro.request)
---

<Layout title="Bienvenido a SVG SHOP">
	<header>
			<div>
				<input type="checkbox" class="checkbox" id="checkbox">
					<label for="checkbox" class="label">
						<i class="fas fa-moon"></i>
						<i class="fas fa-sun"></i>
						<div class="ball"></div>
					</label>
			</div>
			<div class="head">
				<a href="/">SVG SHOP</a>
			</div>
			
		
	</header>
	<hr>
	<body class="light">
		
		<main>
		
		{session == null ? <Intro /> : <Shop /> }
		
		</main>
	</body>
</Layout>

<style>
	
	.head {
		text-align: center;
		padding: 5px;
		font-size: 150px;
		font-family: "GraffitiBubble";
		background-color: rgb(255, 0, 212);

	}
	a {
		color: black;
		text-decoration: none;
	}
	hr {
		border-color: rgb(255, 0, 212);
	}
	header {
		font-family: "GraffitiBubble";
		background-color: rgb(255, 0, 212);

	}
	#logout {
		align-items: right: inherit;
	}
	
	.log {
		text-align: center;
		margin-top: 50px;
		margin-bottom: 50px;
		margin-left: 800px;
		margin-right: 800px;
		background-color: #515151;
		border-radius: 7px;
		padding: 17px;
		border: 3px solid rgb(255, 0, 212)
	}

	.label{
		background-color: #111;
		display: flex;
		border-radius: 50px;
		height: 26px;
		width: 50px;
		align-items: center;
		justify-content: space-between;
		padding: 6px;
		position: relative;
	}
	.fa-moon{
		color: #f1c40f;
}
	.fa-sun{
		color: #f39c12;
		}
	.ball{
		background-color: #fff;
		border-radius: 50%;
		position: absolute;
		width: 26px;
		height: 26px;
		transition: transform 0.2s linear;
	}
	.checkbox{
		opacity: 0;
		position: absolute;
	}
	.checkbox:checked + .label .ball{
		transform: translateX(24px);
	}
</style>


